{
    "name": "jolicode/slack-secret-santa",
    "license": "MIT",
    "authors": [
        {
            "name": "JoliCode",
            "email": "coucou@jolicode.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Joli\\SlackSecretSanta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joli\\SlackSecretSanta\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "adam-paterson/oauth2-slack": "^1.1.3",
        "cleentfaar/slack": "~0.17",
        "predis/predis": "^1.1",
        "symfony/asset": "^3.4",
        "symfony/flex": "^1.0.56",
        "symfony/framework-bundle": "^3.4",
        "symfony/monolog-bundle": "^3.1",
        "symfony/twig-bundle": "^3.4",
        "symfony/yaml": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.8",
        "symfony/browser-kit": "^3.4",
        "symfony/css-selector": "^3.4",
        "symfony/dotenv": "^3.4",
        "symfony/phpunit-bridge": "^3.4",
        "symfony/profiler-pack": "^1.0",
        "symfony/web-server-bundle": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*",
        "symfony/twig-bundle": "<3.3",
        "symfony/debug": "<3.3"
    },
    "extra": {
        "symfony": {
            "id": "01BJXX8ZDDPMDF82T76S0FA56S",
            "allow-contrib": false
        }
    }
}
