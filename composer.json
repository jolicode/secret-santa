{
    "name": "jolicode/secret-santa",
    "description": "Throw a Secret Santa with your team!",
    "license": "MIT",
    "authors": [
        {
            "name": "JoliCode",
            "email": "coucou@jolicode.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "JoliCode\\SecretSanta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JoliCode\\SecretSanta\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "adam-paterson/oauth2-slack": "^1.1.3",
        "bugsnag/bugsnag-symfony": "dev-symfony8",
        "jolicode/slack-php-api": "^4.7.1",
        "nelmio/security-bundle": "dev-symfony8",
        "predis/predis": "^2.2.2",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/flex": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "*",
        "symfony/mime": "*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/runtime": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*",
        "twig/twig": "^3.22",
        "wohali/oauth2-discord-new": "^1.2.1",
        "phpspec/phpspec": "dev-sf8 as 8.0.0",
        "jane-php/jane-php": "dev-sf8 as v7.9.0",
        "php-http/client-common": "dev-sf8 as v2.7.0"
    },
    "require-dev": {
        "symfony/browser-kit": "*",
        "symfony/css-selector": "*",
        "symfony/debug-bundle": "*",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "*",
        "symfony/phpunit-bridge": "*",
        "symfony/stopwatch": "*",
        "symfony/var-dumper": "*",
        "symfony/web-profiler-bundle": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "php-http/discovery": true
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*",
        "symfony/twig-bundle": "<3.3",
        "symfony/debug": "<3.3"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "8.0.*"
        }
    },
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/damienalexandre/bugsnag-symfony"
        },
        {
            "type": "vcs",
            "url": "https://github.com/damienalexandre/NelmioSecurityBundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/VincentLanglet/phpspec"
        },
        {
            "type": "vcs",
            "url": "https://github.com/VincentLanglet/janephp"
        },
        {
            "type": "vcs",
            "url": "https://github.com/VincentLanglet/client-common"
        }
    ]
}
